<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.operator.beranda.BerandaOperatorFragment">

    <LinearLayout
        android:id="@+id/akun"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">
        <TextView
            android:id="@+id/id_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID (Role)"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Logout" />

        <Spinner
            android:id="@+id/kecamatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/kecamatan"
            android:layout_marginBottom="10dp"
            android:padding="15dp"
            android:elevation="@dimen/cardview_default_elevation"
            app:boxStrokeWidth="1dp"
            app:boxStrokeColor="@color/primaryColor"
            />

        <Button
            android:id="@+id/kecBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Tampilkan Data" />

        <TextView
            android:id="@+id/dataTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Bukit Raya"
            android:padding="10dp"/>

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:queryHint="Pencarian Aduan Berdasarkan Nama Pelapor"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_aduan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search"
            tools:listitem="@layout/item_row_aduan" />
    </LinearLayout>
</RelativeLayout>